      <driver>com.mysql.jdbc.Driver</driver> 
      <serverURL>jdbc:mysql://localhost:3306/of?rewriteBatchedStatements=true</serverURL> 
      <username encrypted="true">954d050e5a3e24b68976b54aaa76114f84e8796de2a51287</username> 
